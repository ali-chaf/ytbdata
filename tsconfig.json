// tsconfig.json (ensure these options are present under compilerOptions)
{
  "compilerOptions": {
    // ... other options
    "target": "es5", // Or es2016, es2017, es2018, es2019, es2020, es2021, es2022, esnext
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true, // Often helpful to suppress errors from node_modules packages if their types are slightly off
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true, // Highly recommended for strong typing
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext", // Or commonjs for Node.js environments
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx" // THIS IS CRUCIAL FOR REACT JSX
  },
  "include": [
    "src"
  ]
}